<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HistoryFragment">

    <FrameLayout
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/recycler_view" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/Oatmeal"
        android:background="@color/BlackWithOpacity"
        android:text="@string/history_notification"/>

    <TextView
        android:id="@+id/txt_empty_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/if_history_isempty"
        android:textColor="@color/colorWhitish"
        android:textSize="22sp" />




</FrameLayout>